#cloud-config
hostname: ${hostname}
fqdn: ${hostname}
users:
  - name: admin
    gecos: k3s admin
    groups: users, admin
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - ${sshkey}
packages:
  - xe-guest-utilities
package_update: true
package_upgrade: true
package_reboot_if_required: true